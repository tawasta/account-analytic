<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_account_payment_mass_cancel" model="ir.ui.view">
        <field name="name">Payments Mass Cancel</field>
        <field name="model">account.payment.mass.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel">
                <separator
          string="Do you want to Cancel these payments?"
          colspan="4"
        />
                <footer>
                    <button
            name="cancel_payments"
            string="Cancel Payments"
            type="object"
            class="oe_highlight"
          />
                    <button
            string="Abort"
            special="cancel"
            class="btn-secondary"
          />
                </footer>
            </form>
        </field>
    </record>

    <record
    model="ir.actions.act_window"
    id="action_account_payment_mass_cancel"
  >
        <field name="name">Cancel Payments</field>
        <field name="res_model">account.payment.mass.cancel</field>
        <field name="binding_model_id" ref="account.model_account_payment" />
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
