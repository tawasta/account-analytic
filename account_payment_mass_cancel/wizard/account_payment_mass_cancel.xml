<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <record id="view_account_payment_mass_cancel" model="ir.ui.view">
        <field name="name">Payments Mass Cancel</field>
        <field name="model">account.payment.mass.cancel</field>
        <field name="arch" type="xml">
            <form string="Cancel">
                <separator
                    string="Do you want to Cancel these payments?"
                    colspan="4"/>
                <footer>
                    <button name="cancel_payments"
                        string="Cancel Payments"
                        type="object"
                        class="oe_highlight"/>
                    <button string="Abort"
                        special="cancel"
                        class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window name="Cancel Payments"
        res_model="account.payment.mass.cancel"
        src_model="account.payment"
        view_mode="form"
        view_type="form"
        target="new"
        multi="True"
        key2="client_action_multi"
        id="action_account_payment_mass_cancel"/>
</odoo>
